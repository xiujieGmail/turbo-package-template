{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
        "pipeline": {
            "build": {
                "dependsOn": ["^build"],
                "outputs": ["dist/**", "packages/*/dist/**"]
            },
            "lint": {
                "outputs": []
            },
            "dev": {
                "cache": false,
                "persistent": true
            },
            "test": {
                "dependsOn": ["build"],
                "outputs": ["coverage/**"]
            }
        }
}